<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cse3345.f13.dewey"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />
	<uses-permission android:name="android.permission.WAKE_LOCK"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        <activity
            android:name="com.cse3345.f13.dewey.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cse3345.f13.dewey.SetUp"
            android:label="@string/title_activity_set_up" >
        </activity>
        <activity
            android:name="com.cse3345.f13.dewey.Nap"
            android:label="@string/title_activity_nap"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.cse3345.f13.dewey.WakeUp"
            android:label="@string/title_activity_wake_up" >
        </activity>
    </application>

</manifest>
